{
  "name": "@o-az/template-ts",
  "version": "1.2.0",
  "description": "A template for Node.js projects using TypeScript, ESM, CJS, Pnpm, and Vitest",
  "repository": "github:o-az/template-ts",
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.cts",
  "module": "./dist/index.js",
  "source": "./src/index.ts",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs",
      "default": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "dev": "node --import='tsx' ./src/index.ts",
    "start": "node --env-file=.env ./dist/index.js",
    "build": "tsup --config=tsup.config.ts",
    "test": "vitest --run",
    "lint": "biome check --apply .",
    "format": "biome format . --write",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "check-package": "publint && attw --pack",
    "release": "npm_config_yes=true pnpm dlx bumpp package.json --commit --push --tag",
    "prerelease": "pnpm build && publint && attw --pack",
    "prepublishOnly": "pnpm build",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.1",
    "@biomejs/biome": "^1.6.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/node": "^20.11.28",
    "publint": "^0.2.7",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=20"
  },
  "sideEffects": false,
  "author": "o-az (https://github.com/o-az)",
  "keywords": ["typescript", "node.js", "esm", "cjs", "pnpm", "vitest", "template"],
  "license": "GPT-v3-or-later"
}
