{
  "name": "@o-az/template-ts",
  "version": "1.0.0",
  "description": "A template for Node.js projects using TypeScript, ESM, CJS, Pnpm, and Vitest",
  "repository": "github:o-az/template-ts",
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.cts",
  "module": "./dist/index.js",
  "source": "./src/index.ts",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "dev": "NODE_ENV=development tsup --config=tsup.config.ts --watch --onSuccess='node --env-file=.env ./dist/index.js'",
    "start": "node --env-file=.env ./dist/index.js",
    "build": "tsup --config=tsup.config.ts",
    "test": "vitest --run",
    "lint": "eslint --fix . --ext='js,cjs,mjs,ts,d.ts,json,yml,yaml' --ignore-path='.eslintignore' --cache",
    "format": "prettier . --write '*/**.{js,cjs,mjs,jsx,ts,d.ts,json,md,sh}' --ignore-path='.eslintignore' --ignore-unknown --cache",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "release": "npm_config_yes=true pnpm dlx bumpp package.json --commit --push --tag",
    "prerelease": "pnpm build",
    "prepublishOnly": "pnpm build",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/eslint": "^8.44.6",
    "@types/node": "^20.8.7",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsonc": "^2.10.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "eslint-plugin-yml": "^1.10.0",
    "jsonc-eslint-parser": "^2.3.0",
    "prettier": "^3.0.3",
    "prettier-plugin-sh": "^0.13.1",
    "tsup": "^7.2.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=20"
  },
  "sideEffects": false,
  "homepage": "https://github.com/o-az/template-ts#readme",
  "author": "o-az (https://github.com/o-az)",
  "keywords": [
    "typescript",
    "node.js",
    "esm",
    "cjs",
    "pnpm",
    "vitest",
    "template"
  ],
  "license": "GPT-v3-or-later"
}
